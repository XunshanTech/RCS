script(src='/js/dependencies/highstock-release/highstock.js')
script(src='/js/dependencies/highstock-release/modules/exporting.js')

form.restaurant-data-form
  .restaurant-tabs.clearfix
    .restaurant-tab-label 选择餐厅：
    .restaurant-tab(ng-repeat='restaurant in restaurants',
      ng-class='{true:"restaurant-tab-sel"}[rcsCommon.analyticsRestaurantIndex == $index]',
      ng-click='clickRestaurants($index)') {{restaurant.RestaurantName}}
.analytics
  .row
    .col-md-6
      .panel
        .analytics-title 最近30天节省的时间成本
        .analytics-content.clearfix
          .analytics-icon
            i.fa.fa-clock-o
          .analytics-circle-wrap
            #analytics-data-30.analytics-circle 0
              span 分
    .col-md-6
      .panel
        .analytics-title.analytics-title-red 最近30天节省的人力成本
        .analytics-content.clearfix
          .analytics-icon.analytics-icon-money
            i.fa.fa-dollar
          .analytics-circle-wrap
            #analytics-person-30.analytics-circle 0
              span 元
  #data-container(style="height:100%;min-width:310px;") &nbsp;
  #data-person-container(style="height:100%;min-width:310px;") &nbsp;

